@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}


<div class="w-full lg:w-6/12 px-4">
    <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-slate-200 border-0">
        <div class="flex-auto px-4 lg:px-10 py-10 pt-8">
            <form asp-controller="Auth" asp-action="Register">
                <div class="relative w-full mb-3">
                    <label asp-for="Email" class="block uppercase text-slate-600 text-xs font-bold mb-2"></label>
                    <input asp-for="Email" class="border-0 px-3 py-3 placeholder-slate-300 text-slate-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="John.Bennet@mail.com" />
                    <span asp-validation-for="Email" class=""></span>
                </div>
                <div class="relative w-full mb-3">
                    <label asp-for="PreferredName" class="block uppercase text-slate-600 text-xs font-bold mb-2"></label>
                    <input asp-for="PreferredName" class="border-0 px-3 py-3 placeholder-slate-300 text-slate-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="John Bennet" />
                    <span asp-validation-for="PreferredName" class=""></span>
                </div>
                <div class="relative w-full mb-3">
                    <label asp-for="Password" class="block uppercase text-slate-600 text-xs font-bold mb-2"></label>
                    <input asp-for="Password" type="password" class="border-0 px-3 py-3 placeholder-slate-300 text-slate-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Password" />
                    <span asp-validation-for="Password" class=""></span>
                </div>
                <div class="relative w-full mb-3">
                    <label asp-for="RepeatPassword" class="block uppercase text-slate-600 text-xs font-bold mb-2"></label>
                    <input asp-for="RepeatPassword" type="password" class="border-0 px-3 py-3 placeholder-slate-300 text-slate-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Confirm your password" />
                    <span asp-validation-for="RepeatPassword" class=""></span>
                </div>
                <div class="text-center mt-6">
                    <button class="bg-slate-800 text-white active:bg-slate-600 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150" type="submit">
                        Create Account
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
