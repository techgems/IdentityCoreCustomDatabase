<!DOCTYPE html>
<html :class="{ 'theme-dark': dark }" x-data="data()" lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
          rel="stylesheet" />
    <link href="~/css/tailwind.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/3.5.1/cdn.min.js" defer></script>
    <script src="~/js/WindmillUI/init-alpine.js"></script>
</head>
<body>
    <div style="background-image: url('@Url.Content("~/img/imgBackground.jfif")'); background-size: 100% 100%; ">
        <div class="hidden md:block bg-red-500 text-white align-middle text-center">Important! In order to use the new system you need to reset your password. Click forgot password to start the process.</div>
        <div class="flex items-center min-h-screen">
            <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
                @RenderBody()
            </div>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
